<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pazzword" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1985B7</item>
        <item name="colorPrimaryVariant">#09457A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="toolBarColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="toolBarTextColor">@color/toolBarTextColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/toolBarTextColor</item>
    </style>
</resources>